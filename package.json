{
	"name": "mtgsvelte3",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:e2e": "playwright test",
		"test:unit": "vitest run",
		"test:watch": "vitest",
		"test": "npm run test:unit && npm run test:e2e",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"security:audit": "npm run build:security && node scripts/security-audit.js",
		"security:audit:ci": "npm run security:audit && npm audit --audit-level=high",
		"precommit": "npm run lint && npm run test && npm run security:audit",
		"build:security": "node scripts/build-security-utils.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.51.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.0.12",
		"@testing-library/svelte": "^5.2.7",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/node-fetch": "^2.6.12",
		"@types/nodemailer": "^6.4.17",
		"@types/uuid": "^10.0.0",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.5",
		"esbuild": "^0.25.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.22.6",
		"svelte-check": "^4.1.5",
		"tailwindcss": "^4.0.12",
		"typescript": "^5.8.2",
		"uuid": "^11.1.0",
		"vite": "^6.2.1",
		"vitest": "^3.0.8"
	},
	"dependencies": {
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@types/jsonwebtoken": "^9.0.9",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^3.0.2",
		"cloudinary": "^2.5.1",
		"csv-parser": "^3.2.0",
		"drizzle-orm": "^0.40.0",
		"express-rate-limit": "^7.5.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.10.0",
		"postgres": "^3.4.5",
		"sharp": "^0.33.5",
		"svelte-dnd-action": "^0.9.57"
	}
}
